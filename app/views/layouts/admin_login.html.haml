%html.fluid.top-full.sticky-top.sidebar.sidebar-full
  / <![endif]
  %head
    %title  After School Vendors
    / Meta
    %meta{charset: "UTF-8"}/
    %meta{content: "width=device-width, initial-scale=1.0, user-scalable=0, minimum-scale=1.0, maximum-scale=1.0", name: "viewport"}/
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}/
    %meta{content: "black", name: "apple-mobile-web-app-status-bar-style"}/
    %meta{content: "IE=9; IE=8; IE=7; IE=EDGE", "http-equiv" => "X-UA-Compatible"}/
    = stylesheet_link_tag    "admin_login", media: "all", "data-turbolinks-track" => true
    / Bootstrap
    / JQuery
    %script{src: "http://code.jquery.com/jquery-1.10.1.min.js"}
    %script{src: "http://code.jquery.com/jquery-migrate-1.2.1.min.js"}
    / HTML5 shim, for IE6-8 support of HTML5 elements
    -#/[if lt IE 9]
      <script src="/assets/common/theme/scripts/plugins/system/html5shiv.js"></script>
    / Main Theme Stylesheet :: CSS
    / <script src="https://getfirebug.com/firebug-lite-debug.js"></script>
    / LESS.js Library
    -#%script{src: "/assets/common/theme/scripts/plugins/system/less.min.js"}
  %body.login
    #login
      .container
        .wrapper
          = image_tag 'logo.png'
    - unless flash[:notice].blank?
      %br
      %br
      .alert.alert-success
        = content_tag :div, flash[:notice]
    - unless flash[:error].blank?
      %br
      %br
      .alert.alert-danger
        = content_tag :div, flash[:error]
    - unless flash[:alert].blank?
      %br
      %br
      .alert.alert-info
        = content_tag :div, flash[:alert]
    = yield
    = javascript_include_tag "admin_longin", "data-turbolinks-track" => true

